#include <iostream>

using namespace std;

int main() {
 int rowCount;
   cout << "Enter the rows you want to print:-";
   cin >> rowCount;

  int colCount;
   cout << "Enter the columns you want to print:-";
  cin >> colCount;

   for (int row = 0; row < rowCount; row++) {
    if (row == 0 || row == rowCount - 1) {
      for (int col = 0; col < colCount; col++) {
       cout << "* ";
     }
    }
    else {
      cout << "* ";
     for (int i = 0; i < colCount - 2; i++) {
      cout << "  ";
     }
     cout << "* ";
   }
    cout << endl;
  }
  }
